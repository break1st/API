{
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "rules": {
      "indent": [
          "error",
          "tab",
          { "SwitchCase": 1 }
      ],
      "max-len": [
          "error",
          { "ignoreStrings": true, "ignoreComments": true }
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "never"
      ],
      "no-trailing-spaces": [
          "error"
      ],
      "space-in-parens": [
          "error",
          "never"
      ],
      "space-infix-ops": [
          "error"
      ],
      "block-spacing": [
          "error",
          "always"
      ],
      "no-fallthrough": [
          "error",
          { "commentPattern": "break[\\s\\w]*omitted"}
      ],
      "@typescript-eslint/no-unused-vars": [
          "warn",
          { "ignoreRestSiblings": true }
      ]
  }
}